{
    "manifest_version": 2,
    "name": "Picarto TV URL Converter",
    "version": "1.0",
    "description": "Converts Picarto TV URLs to the chat popout format.",
    "icons": {
      "32": "icon-32.png"
    },
    "permissions": [
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_title": "Convert to Chat Popout",
      "default_icon": "icon-32.png"
    }
  }
  